<!doctype html>
<link rel=stylesheet href=/index.css>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
  <nav class="nav-extended">
    <div class="nav-content">
      <ul class="tabs tabs-transparent">
        <li class="tab"><a href="/register">Registreer</a></li>
      </ul>
    </div>
  </nav>

<div class="container">
  <div class="row">
    <div class="col s12">
      <h1>Wijzig gegevens van <%= name %></h1>
      <p>Wijzig accountgegevens met behulp van het onderstaande formulier</p>
      <form action=/editUser method=post>
        <label>Gebruikersnaam<input name=name value="<%= name %>"></label>
        <label>Leeftijd<input name=age value="<%= age %>"></label>
        <label>Beschrijving<input name=description value="<%= description %>"></label>
        <button class="waves-effect waves-light btn">Klaar</button>
      </form>
    </div>
  </div>
</div>



